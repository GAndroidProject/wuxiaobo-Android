<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/corners_bg_with_border">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/itemIcon"
        android:layout_width="160dp"
        android:layout_height="120dp"
        fresco:roundedCornerRadius="@dimen/corner_border_radius_size"
        fresco:roundingBorderWidth="1dp"
        fresco:roundBottomRight="false"
        fresco:roundTopRight="false"/>

    <FrameLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/itemIcon"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/main_title_color"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/itemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/secondary_title_color"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="26dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/itemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="end"
        android:layout_alignStart="@+id/item"
        android:textColor="@color/knowledge_item_desc_color"
        android:layout_above="@+id/learningProgress"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"/>
    <ProgressBar
        android:id="@+id/learningProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:max="100"
        android:progress="40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_alignStart="@+id/item"
        android:layout_marginEnd="14dp"
        android:progressDrawable="@drawable/progressbar_style"/>
</RelativeLayout>
