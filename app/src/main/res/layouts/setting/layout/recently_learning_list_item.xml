<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:background="@drawable/corners_bg_with_border">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/itemIcon"
        android:layout_width="144dp"
        android:layout_height="match_parent"
        fresco:roundedCornerRadius="@dimen/corner_border_radius_size"
        fresco:roundingBorderWidth="1dp"
        fresco:roundBottomRight="false"
        fresco:roundTopRight="false"/>

    <FrameLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/itemIcon"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/main_title_color"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/itemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/knowledge_item_desc_color"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="26dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/item"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="end"
            android:textColor="@color/knowledge_item_desc_color"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <ProgressBar
            android:id="@+id/learningProgress"
            android:visibility="gone"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:max="100"
            android:progress="40"
            android:layout_marginEnd="12dp"
            android:progressDrawable="@drawable/progressbar_style"/>
    </LinearLayout>
</RelativeLayout>
