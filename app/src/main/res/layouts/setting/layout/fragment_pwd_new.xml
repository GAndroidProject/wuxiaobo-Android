<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_pwd_limit"
        android:textSize="16sp"
        android:textColor="@color/secondary_title_color"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"/>
    
    <EditText
        android:id="@+id/pwd_new_content"
        android:labelFor="@id/pwd_new_content"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="textVisiblePassword"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:textSize="16sp"
        android:textColor="@color/main_title_color"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableEnd="@mipmap/comment_liked"
        android:layout_marginTop="26dp"
        android:maxLength="12"/>

    <Button
        android:id="@+id/pwd_new_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_pwd_new_submit"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/person_submit_bg"
        android:layout_marginTop="32dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>

</LinearLayout>