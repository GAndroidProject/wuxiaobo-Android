<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/audio_page_bg_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_pwd_obtain_phone_code"
        android:textSize="16sp"
        android:textColor="@color/secondary_title_color"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/pwd_obtain_phone_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_main_phone_submit"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/person_submit_bg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>

</LinearLayout>