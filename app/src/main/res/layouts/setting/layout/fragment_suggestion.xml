<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="12dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/suggest_content"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            android:hint="@string/setting_suggestion_hint"
            android:background="@null"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:maxLength="1000" />

        <TextView
            android:id="@+id/suggest_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="@string/setting_suggestion_num_default"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/suggest_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/person_submit_bg"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="40dp"/>

</LinearLayout>