<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_layout_dialog2"
    android:layout_width="240dp"
    android:layout_height="230dp">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/dialog_close"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:src="@mipmap/payment_success"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:text="@string/cd_key_success"
            android:textColor="@color/main_title_color"/>
        <Button
            android:id="@+id/btn_see"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/cd_key_see"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_exchange_success_bg"/>
    </LinearLayout>
</RelativeLayout>
