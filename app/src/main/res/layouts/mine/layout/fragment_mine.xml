<?xml version="1.0" encoding="utf-8"?>
<xiaoe.com.shop.widget.PushScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mine_title_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <xiaoe.com.shop.business.mine.ui.MineTitleView
                    android:id="@+id/mine_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

                <xiaoe.com.shop.business.mine.ui.MineMsgView
                    android:id="@+id/mine_msg_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="32dp"
                    android:paddingBottom="68dp"/>

            </LinearLayout>

            <xiaoe.com.shop.business.mine.ui.MineVipCard
                android:id="@+id/mine_vip_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-36dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <xiaoe.com.shop.business.mine.ui.MineMoneyWrapView
                android:id="@+id/mine_money_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <xiaoe.com.shop.business.mine.ui.MineLearningWrapView
                android:id="@+id/mine_learning_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_logo_xiaoetong"
                android:contentDescription="@string/xet_logo"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>

        <xiaoe.com.shop.widget.StatusPagerView
            android:id="@+id/mine_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</xiaoe.com.shop.widget.PushScrollView>