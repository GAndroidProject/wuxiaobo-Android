<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mine_title_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/mine_title_msg"
        android:padding="20dp"
        android:src="@mipmap/profile_message" />

    <ImageView
        android:id="@+id/mine_title_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/mine_title_setting"
        android:padding="20dp"
        android:src="@mipmap/profile_setting" />

    <TextView
        android:id="@+id/tv_unread_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mine_title_msg"
        android:layout_alignEnd="@+id/mine_title_msg"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/unread_count_bg"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="invisible" />
</RelativeLayout>