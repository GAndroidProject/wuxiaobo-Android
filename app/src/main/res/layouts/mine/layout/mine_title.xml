<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="28dp">

    <ImageView
        android:id="@+id/mine_title_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:contentDescription="@string/mine_title_msg"
        android:src="@mipmap/profile_message" />

    <ImageView
        android:id="@+id/mine_title_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:contentDescription="@string/mine_title_setting"
        android:src="@mipmap/profile_setting" />

    <TextView
        android:id="@+id/tv_unread_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="15dp"
        android:background="@drawable/unread_count_bg"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="invisible" />
</FrameLayout>