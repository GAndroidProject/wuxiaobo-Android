<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mine_title_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/profile_message"
        android:contentDescription="@string/mine_title_msg"
        android:layout_gravity="start"/>

    <ImageView
        android:id="@+id/mine_title_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/profile_setting"
        android:contentDescription="@string/mine_title_setting"
        android:layout_gravity="end"/>

</FrameLayout>