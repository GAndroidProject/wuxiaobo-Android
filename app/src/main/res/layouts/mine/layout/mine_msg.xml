<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/title_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/main_title_color"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="223dp"
            android:layout_gravity="start|center"/>

        <Button
            android:id="@+id/title_buy_vip"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:minHeight="0dp"
            android:layout_weight="1"
            android:background="@drawable/super_vip_bg"
            android:text="@string/super_vip"
            android:textColor="@color/main_title_color"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            style="?android:attr/buttonBarButtonStyle"
            android:drawableStart="@mipmap/profile_diamond"
            android:drawablePadding="4dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:includeFontPadding="false"/>
    </LinearLayout>
    
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/title_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="5dp"
        fresco:roundedCornerRadius="36dp"
        fresco:roundingBorderWidth="1dp"
        android:background="@drawable/avatar_bg"
        android:layout_gravity="end"/>

</FrameLayout>