<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/learning_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/learning_item_logo"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/learning_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:textSize="16sp"
        android:textColor="@color/main_title_color"/>

    <TextView
        android:id="@+id/learning_list_item_coupon_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_tip"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/tips_new_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_gravity="end"
        android:layout_marginEnd="28dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/profile_goahead"
        android:contentDescription="@string/learning_item_go"
        android:layout_gravity="end|center"
        android:layout_marginEnd="4dp"/>

</FrameLayout>