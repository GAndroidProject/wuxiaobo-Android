<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/money_item_wrap"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/money_item_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="ï¿¥"
            android:textColor="@color/recent_update_btn_pressed"/>
        <TextView
            android:id="@+id/money_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:textColor="@color/recent_update_btn_pressed"/>
    </LinearLayout>
    <TextView
        android:id="@+id/money_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        android:layout_marginTop="9dp"/>
</LinearLayout>