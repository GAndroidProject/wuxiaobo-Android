<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/vip_bg">

    <TextView
        android:id="@+id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_vip_title"
        android:textColor="@color/main_title_color"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="108dp"
        tools:ignore="RelativeOverlap" />

    <ListView
        android:id="@+id/card_equity_list"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:divider="#00000000"
        android:dividerHeight="8dp"/>

    <TextView
        android:id="@+id/card_equity_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/card_title"
        android:text="@string/more_equity"
        android:textColor="@color/main_title_color"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/card_wxb_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wxb_bg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="18dp"
        android:contentDescription="@string/wxb_logo"/>

    <Button
        android:id="@+id/card_renewal"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:minHeight="0dp"
        android:layout_below="@id/card_wxb_bg"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:text="@string/renewal"
        android:textSize="12sp"
        android:background="@drawable/vip_renewal_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deadline_title"
        android:textColor="@color/main_title_color"
        android:textSize="12sp"
        android:layout_below="@id/card_renewal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/card_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/main_title_color"
        android:layout_alignBottom="@id/card_equity_more"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>