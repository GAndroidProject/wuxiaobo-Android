<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/item_container"
	android:layout_width="match_parent"
	android:layout_height="48dp"
	android:background="@drawable/touch_state_bg" >
	<TextView
		android:id="@+id/resource_try"
		android:layout_width="30dp"
		android:layout_height="18dp"
		android:layout_centerVertical="true"
		android:background="@drawable/resource_try_bg"
		android:textSize="12sp"
		android:textColor="@color/white"
		android:gravity="center"
		android:visibility="gone"
		android:layout_marginEnd="4dp"
		/>
	<TextView
		android:id="@+id/text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toStartOf="@+id/btn_item_play"
		android:layout_toEndOf="@id/resource_try"
		android:maxLines="1"
		android:textColor="@color/main_title_color"
		android:textSize="14sp"
		/>
	<LinearLayout
		android:id="@+id/btn_item_play"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_marginStart="6dp"
		android:gravity="center"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/item_play_length"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="6dp"
			android:textColor="@color/secondary_title_color"
			android:textSize="12sp"
			/>
		<ImageView
			android:id="@+id/item_play_icon"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:src="@mipmap/class_play"
			/>
	</LinearLayout>
</RelativeLayout>