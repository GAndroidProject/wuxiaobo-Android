<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wr_result_wrap"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/common_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cash_success"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/withdrawal_success"
        android:textSize="16sp"
        android:textColor="@color/main_title_color"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdrawal_logo"
            android:textSize="24sp"
            android:textColor="@color/scholarship_btn_press"/>

        <TextView
            android:id="@+id/wr_success_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="160.77"
            android:textSize="40sp"
            android:textColor="@color/scholarship_btn_press"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/withdrawal_success_tip"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/withdrawal_bottom_tip"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        android:layout_marginBottom="40dp"/>

</LinearLayout>