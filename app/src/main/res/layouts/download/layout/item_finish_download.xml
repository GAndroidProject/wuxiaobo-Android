<?xml version="1.0" encoding="utf-8"?>
<com.xiaoe.shop.wxb.widget.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/white"
    android:layout_marginTop="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/btn_delete"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/layout_content"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/download_delete"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/item_content_wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/white_solid_border"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/item_image"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    fresco:roundTopLeft="true"
                    fresco:roundBottomLeft="true"
                    fresco:roundTopRight ="false"
                    fresco:roundBottomRight  ="false"
                    fresco:roundedCornerRadius="4dp"
                    />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:maxLines="2"
                    android:layout_toEndOf="@id/item_image"
                    android:textColor="@color/main_title_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/item_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/item_title"
                    android:maxLines="1"
                    android:layout_toEndOf="@id/item_image"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_title_color"
                    />
                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentBottom="true"
                    android:maxLines="1"
                    android:layout_toEndOf="@id/item_image"
                    android:textSize="12sp"
                    android:textColor="@color/knowledge_item_desc_color"
                    />
                <TextView
                    android:id="@+id/item_total_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="@color/knowledge_item_desc_color"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</com.xiaoe.shop.wxb.widget.SlidingButtonView>