<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/download_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_select_download_wrap"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:background="@color/main_bg_color"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_above="@+id/bottom_select_download_wrap"
        />
    <RelativeLayout
        android:id="@+id/bottom_select_download_wrap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >
        <RelativeLayout
            android:id="@+id/btn_all_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/all_select_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/download_tocheck"
                />
            <TextView
                android:id="@+id/all_select_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/all_select_image"
                android:layout_marginStart="8dp"
                android:textColor="@color/price_color"
                android:textSize="16sp"
                android:text="@string/all_select_text"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/select_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_all_select"
            android:layout_marginStart="12dp"
            android:textColor="@color/secondary_title_color"
            />
        <TextView
            android:id="@+id/btn_download"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/recent_update_btn_pressed"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/download_title"
            />
    </RelativeLayout>
</RelativeLayout>