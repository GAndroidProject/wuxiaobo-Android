<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/downloadBottomWrap"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".business.download.ui.DownloadListFragment">

    <TextView
        android:id="@+id/allSelectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/price_color"
        android:textSize="16sp"
        android:text="@string/all_select_text"
        android:drawableStart="@mipmap/download_tocheck"
        android:layout_gravity="center_vertical"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/selectCountDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/secondary_title_color"
        android:layout_gravity="center_vertical"
        android:maxWidth="160dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/downloadSubmit"
        android:layout_width="96dp"
        android:layout_height="34dp"
        android:background="@drawable/recent_update_btn_pressed"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/download_title"
        android:layout_gravity="center_vertical"/>

</LinearLayout>