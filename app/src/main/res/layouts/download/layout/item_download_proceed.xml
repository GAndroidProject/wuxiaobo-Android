<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    >

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/line_1"
        android:gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:layout_toStartOf="@id/btn_expand_down"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/main_title_color"
        />
    <LinearLayout
        android:id="@+id/btn_expand_down"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:paddingEnd="20dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/secondary_title_color"
            android:text="@string/expand_down"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/expand"
            />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/child_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:visibility="gone"
        />
    
    <RelativeLayout
        android:id="@+id/btn_expand_top"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/child_recycler_view"
        android:visibility="gone"
        >
        <View
            android:id="@id/line_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_title_color"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/expand_top_icon"
            android:textSize="14sp"
            android:text="@string/expand_top"
            />
        <ImageView
            android:id="@+id/expand_top_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/expand_top"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_below="@id/btn_expand_top"
        />

</RelativeLayout>