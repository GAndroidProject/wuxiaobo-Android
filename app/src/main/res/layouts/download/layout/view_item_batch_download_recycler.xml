<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/temp_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/top_bottom_border"
    >
    <!--<View-->
        <!--android:id="@+id/line_0"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@color/line"-->
        <!--/>-->
    <RelativeLayout
        android:id="@+id/title_warp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <RelativeLayout
            android:id="@+id/btn_little_all_select"
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/little_all_select_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/download_tocheck"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/btn_little_all_select"
            android:layout_toStartOf="@+id/expand_down_btn"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/main_title_color"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/expand_down_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/expand_down"
                />
            <ImageView
                android:id="@+id/expand_down"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="4dp"
                android:src="@mipmap/expand" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/line"
        android:layout_below="@id/title_warp"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tree_child_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <RelativeLayout
        android:id="@+id/expand_top_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tree_child_recycler_view"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <View
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/expand_top"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="@string/expand_top"
            />
        <ImageView
            android:id="@+id/expand_top"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="4dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/expand_top" />
    </RelativeLayout>
    <!--<View-->
        <!--android:id="@+id/line_3"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@color/line"-->
        <!--android:layout_below="@id/expand_top_btn"-->
        <!--/>-->
</RelativeLayout>