<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_wrap"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/download_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/single_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="我的财富计划"
            android:textSize="16sp"
            android:textColor="@color/main_title_color"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/download_checking"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:maxWidth="220dp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/single_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="14:22"
            android:textSize="12sp"
            android:textColor="@color/secondary_title_color"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"/>

    </LinearLayout>

    <View
        android:id="@+id/single_top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_gravity="top"/>

    <View
        android:id="@+id/single_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_gravity="bottom"/>

</FrameLayout>
