<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/download_proceed_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_button"
        />
    <RelativeLayout
        android:id="@+id/bottom_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            />
        <TextView
            android:id="@+id/btn_all_delete"
            android:layout_width="112dp"
            android:layout_height="34dp"
            android:layout_toStartOf="@+id/btn_all_start_download"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/recent_list_color"
            android:textSize="16sp"
            android:text="@string/all_delete"
            android:background="@drawable/all_delete_download_white"
            />
        <TextView
            android:id="@+id/btn_all_start_download"
            android:layout_width="112dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/all_start_download"
            android:background="@drawable/recent_update_btn_pressed"
            />
    </RelativeLayout>
</RelativeLayout>