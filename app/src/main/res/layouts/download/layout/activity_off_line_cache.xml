<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    >
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingStart="20dp"
            android:src="@mipmap/download_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_title_color"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/off_line_cache_text"
            />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/table_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tool_bar"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/btn_finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/finish_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finish_download"
                android:layout_centerInParent="true"
                android:textColor="@drawable/cache_tab_title"
                android:textStyle="bold"
                android:textSize="14sp"
                />
            <View
                android:id="@+id/finish_select"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/cache_tab_select"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_download_proceed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/download_proceed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text="@string/download_proceed"
                android:textColor="@drawable/cache_tab_title"
                android:textSize="14sp"
                />
            <View
                android:id="@+id/download_proceed_select"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/cache_tab_select"
                />
        </RelativeLayout>
    </LinearLayout>

    <xiaoe.com.shop.widget.ScrollViewPager
        android:id="@+id/tab_view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/table_bar"
        />

</RelativeLayout>