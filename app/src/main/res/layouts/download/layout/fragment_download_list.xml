<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.download.ui.DownloadListFragment">

    <include
        layout="@layout/download_list_header"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/download_list_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <include
                layout="@layout/download_list_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

        <com.xiaoe.shop.wxb.widget.StatusPagerView
            android:id="@+id/downloadLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/downloadSecondWrap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                layout="@layout/download_list_second_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <View
                android:id="@+id/downloadColumnEmptyView"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:background="@color/black_with_alpha"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>