<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_bottom_wrap"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/download_item_bg"
    android:layout_marginBottom="16dp">

    <View
        android:id="@+id/group_bottom_top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/group_bottom_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收起"
        android:textSize="14sp"
        android:drawableEnd="@mipmap/expand_top"
        android:drawablePadding="4dp"
        android:layout_gravity="end"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <View
        android:id="@+id/group_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

</LinearLayout>