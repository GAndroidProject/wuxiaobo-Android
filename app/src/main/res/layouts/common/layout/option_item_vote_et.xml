<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <include layout="@layout/item_div_line" />

    <EditText
        android:id="@+id/et_item_vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/rv_delete_item_vote"
        android:maxLength="32"
        android:minHeight="36dp"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp"
        tools:hint="请输入更新说明" />

    <com.xiaoe.shop.wxb.widget.RippleView
        android:id="@+id/rv_delete_item_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_delete_item_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_delete_item_vote" />
    </com.xiaoe.shop.wxb.widget.RippleView>
</RelativeLayout>