<?xml version="1.0" encoding="utf-8"?>
<xiaoe.com.shop.widget.PushScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail_wrap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:scrollId="@+id/item_detail_bg"
    app:maxZoom="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_detail_bg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@mipmap/ic_launcher"
            android:transitionName="@string/share_img" />

        <ImageView
            android:id="@+id/item_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/download_back"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/item_detail_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:text="今日精选"
            android:textSize="14sp"
            android:textColor="@color/main_title_color"
            android:layout_below="@id/item_detail_bg"
            android:transitionName="@string/share_txt" />

        <TextView
            android:id="@+id/item_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的财富计划啊啊啊 新中产必修财富课程"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="26dp"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toStartOf="@id/item_detail_collection"
            android:layout_below="@id/item_detail_classify"/>

        <ImageView
            android:id="@+id/item_detail_collection"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/video_collect"
            tools:ignore="ContentDescription"
            android:layout_marginTop="18dp"
            android:layout_toStartOf="@id/item_detail_share"
            android:layout_below="@id/item_detail_bg"/>

        <ImageView
            android:id="@+id/item_detail_share"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/audio_share"
            tools:ignore="ContentDescription"
            android:layout_alignBottom="@id/item_detail_collection"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="14dp"/>

        <TextView
            android:id="@+id/item_detail_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="· 12w人学习"
            android:textSize="12dp"
            android:textColor="@color/secondary_title_color"
            android:layout_below="@id/item_detail_title"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="14dp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_detail_desc_img"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_below="@id/item_detail_desc"
            fresco:failureImage="@mipmap/audio_share"/>

        <TextView
            android:id="@+id/item_detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领取奖学金"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/item_detail_desc_img"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/recent_update_btn_selector"/>

        <TextView
            android:id="@+id/item_detail_org_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="20dp"
            android:layout_below="@id/item_detail_desc_img"/>

        <xiaoe.com.shop.widget.CommonBuyView
            android:id="@+id/item_detail_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/item_detail_org_content"/>
    </RelativeLayout>

</xiaoe.com.shop.widget.PushScrollView>
