<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/image_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/main_title_color"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="120dp"/>

    <ImageView
        android:id="@+id/image_text_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/video_collect"
        tools:ignore="ContentDescription"
        android:layout_toStartOf="@id/image_text_share"
        android:layout_below="@id/it_title_bg"/>

    <ImageView
        android:id="@+id/image_text_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/audio_share"
        tools:ignore="ContentDescription"
        android:layout_alignBottom="@id/image_text_collection"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/image_text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        android:layout_below="@id/image_text_title"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/start_point"
        android:drawablePadding="4dp" />

</RelativeLayout>