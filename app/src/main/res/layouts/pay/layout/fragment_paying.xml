<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_content_wrap"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:background="@drawable/white_solid_border"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_image"
            android:layout_width="160dp"
            android:layout_height="120dp"
            fresco:roundTopLeft="true"
            fresco:roundBottomLeft="true"
            fresco:roundTopRight ="false"
            fresco:roundBottomRight  ="false"
            fresco:roundedCornerRadius="4dp"
            />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:maxLines="2"
            android:layout_toEndOf="@id/item_image"
            android:textColor="@color/main_title_color"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/item_title"
            android:maxLines="1"
            android:layout_toEndOf="@id/item_image"
            android:textSize="14sp"
            android:textColor="@color/secondary_title_color"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:layout_toEndOf="@id/item_image"
            android:textSize="16sp"
            android:textColor="@color/price_color"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/coupon_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/item_content_wrap"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coupon_title"
            android:textColor="@color/main_title_color"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/use_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/go"
            android:layout_marginEnd="12dp"
            android:textSize="14sp"
            android:textColor="@color/secondary_title_color"
            android:text="@string/not_can_use_or_no_sue_coupon"
            />
        <ImageView
            android:id="@+id/go"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/profile_goahead"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/coupon_wrap"
        android:background="@color/line"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <RelativeLayout
        android:id="@+id/pay_mode_warp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:background="@color/main_bg_color"
        android:layout_margin="20dp"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/pay_mode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/main_title_color"
            android:text="@string/select_pay_mode_text"
            />
        <ImageView
            android:id="@+id/wechat_icon"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_below="@id/pay_mode_text"
            android:layout_marginTop="24dp"
            android:src="@mipmap/confirmorder_wechat"
            />
        <TextView
            android:id="@+id/wechat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_mode_text"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/wechat_icon"
            android:layout_marginStart="8dp"
            android:textColor="@color/secondary_title_color"
            android:textSize="14sp"
            android:text="@string/wechat_pay"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/pay_mode_text"
            android:layout_marginTop="24dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/download_checking"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_mode_warp"
        android:layout_toStartOf="@+id/pay_price"
        android:text="@string/pay_price_text"
        android:textColor="@color/main_title_color"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/pay_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_mode_warp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:textColor="@color/price_color"
        />
    <TextView
        android:id="@+id/btn_succeed_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/succeed_pay"
        android:background="@drawable/high_button"
        />
</RelativeLayout>