<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recordWrap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".common.pay.ui.AccountDetailActivity"
    android:background="@color/white">

    <include
        layout="@layout/common_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/recordRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_color">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.xiaoe.shop.wxb.widget.CustomScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/recordList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dividerHeight="32dp"
                        android:divider="@drawable/list_dotted_line"
                        android:layerType="software"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="18dp"
                        android:scrollbars="none"
                        android:listSelector="@color/self_transparent"/>

                </LinearLayout>

            </com.xiaoe.shop.wxb.widget.CustomScrollView>

            <com.xiaoe.shop.wxb.widget.StatusPagerView
                android:id="@+id/recordLoading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-100dp"/>

        </FrameLayout>

        <com.xiaoe.common.widget.CommonRefreshFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>