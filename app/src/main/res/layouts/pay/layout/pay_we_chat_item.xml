<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="22dp"
    android:paddingBottom="22dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/white"
    tools:context=".common.pay.ui.BoBiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wechat_pay"
        android:textSize="14sp"
        android:textColor="@color/main_title_color"
        android:gravity="center_vertical"
        android:drawableStart="@mipmap/cash_wechat"
        android:drawablePadding="8dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/weChatItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/download_checking"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/confirm_we_chat_pay_icon" />

</LinearLayout>