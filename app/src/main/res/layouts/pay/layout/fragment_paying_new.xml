<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/itemContentWrapNew"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/white_solid_border">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/itemImage"
            android:layout_width="160dp"
            android:layout_height="120dp"
            fresco:roundTopLeft="true"
            fresco:roundBottomLeft="true"
            fresco:roundTopRight="false"
            fresco:roundBottomRight="false"
            fresco:roundedCornerRadius="4dp" />

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:maxLines="2"
            android:layout_toEndOf="@id/itemImage"
            android:textColor="@color/main_title_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.xiaoe.shop.wxb.widget.autotextview.AutofitTextView
            android:id="@+id/itemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/itemTitle"
            android:maxLines="1"
            android:layout_toEndOf="@id/itemImage"
            android:textSize="12sp"
            android:textColor="@color/secondary_title_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/itemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:layout_toEndOf="@id/itemImage"
            android:textSize="16sp"
            android:textColor="@color/price_color" />

    </RelativeLayout>

    <include
        layout="@layout/paying_coupon_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"/>

    <include
        layout="@layout/paying_way_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"/>
    
    <TextView
        android:id="@+id/payingMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paying_account"
        android:textColor="@color/main_title_color"
        android:layout_marginTop="20dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/confirmBuy"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/succeed_pay"
        android:background="@drawable/high_button"/>
    
</LinearLayout>