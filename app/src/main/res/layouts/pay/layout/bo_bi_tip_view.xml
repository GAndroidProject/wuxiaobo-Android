<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/white"
    tools:context=".common.pay.ui.BoBiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bo_bi_tip_title"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/boBiTopUpAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bo_bi_top_up_amount"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bo_bi_tip_rate"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"/>

</LinearLayout>