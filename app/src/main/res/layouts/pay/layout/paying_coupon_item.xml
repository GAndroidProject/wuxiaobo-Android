<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payingCouponWrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/white_corner_bg_6"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coupon_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/main_title_color"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/useCouponTitleNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_can_use_or_no_sue_coupon"
        android:textSize="14sp"
        android:drawableEnd="@mipmap/profile_goahead"
        android:drawablePadding="12dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

</LinearLayout>