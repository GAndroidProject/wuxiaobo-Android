<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boBiItemWrap"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bo_bi_item_bg"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:context=".common.pay.ui.BoBiActivity">

    <TextView
        android:id="@+id/boBiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bo_bi_item_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/scholarship_bg_start" />

    <TextView
        android:id="@+id/boBiContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bo_bi_item_content"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        android:layout_marginTop="8dp"/>

</LinearLayout>