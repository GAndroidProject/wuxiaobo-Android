<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/line_bg">

        <include
            layout="@layout/common_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/scholarship_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现"
            android:textSize="16sp"
            android:textColor="@color/scholarship_btn_press"
            android:layout_marginStart="20dp"
            android:layout_marginTop="46dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scholarship_page_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160.70"
                android:textSize="40sp"
                android:textColor="@color/scholarship_btn_press"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/scholarship_page_content_tail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="18sp"
                android:textColor="@color/scholarship_btn_press"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/scholarship_page_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_disabled_bg"
        android:text="提现"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-12dp"/>

    <TextView
        android:id="@+id/scholarship_page_be_super_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开通超级会员，赚取更多奖学金 >>"
        android:textSize="16sp"
        android:textColor="@color/recent_update_btn_pressed"
        android:drawableStart="@mipmap/profile_diamond"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:drawablePadding="6dp"
        android:layout_marginTop="36dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的奖学金"
        android:textSize="18sp"
        android:textColor="@color/main_title_color"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        android:paddingBottom="20dp"
        android:background="@drawable/layout_bottom_line"/>

    <ListView
        android:id="@+id/scholarship_page_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginTop="12dp"
        android:divider="@drawable/list_dotted_line"
        android:dividerHeight="24dp"
        android:layerType="software"/>

</LinearLayout>