<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/coupon_detail_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/coupon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:src="@mipmap/download_back"
            android:background="@drawable/touch_state_bg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/main_title_color"
            android:text="@string/coupon_can_resource"
            />
    </RelativeLayout>
    <com.xiaoe.shop.wxb.widget.CouponView
        android:id="@+id/coupon_view"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/coupon_detail_tool_bar"
        />
    <TextView
        android:id="@+id/coupon_can_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/coupon_view"
        android:background="@color/white"
        android:textColor="@color/main_title_color"
        android:textSize="16sp"
        android:text="@string/coupon_can_resource_list"
        />

    <ListView
        android:id="@+id/coupon_can_resource_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coupon_can_desc"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:divider="@color/transparent"
        android:dividerHeight="16dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        />
    <com.xiaoe.shop.wxb.widget.StatusPagerView
        android:id="@+id/state_pager_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/coupon_can_desc"
        />
</RelativeLayout>