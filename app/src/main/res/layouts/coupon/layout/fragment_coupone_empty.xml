<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/audio_page_bg_color">
    <RelativeLayout
        android:id="@+id/no_use_coupon"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:background="@drawable/white_round_circle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textColor="@color/main_title_color"
            android:textSize="14sp"
            android:text="@string/no_use_coupon"
            />
        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/download_checking"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coupon_empty_desc"
        android:textSize="16sp"
        android:textColor="@color/main_title_color"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:drawableTop="@mipmap/coupon_none"
        android:drawablePadding="26dp"/>

</LinearLayout>