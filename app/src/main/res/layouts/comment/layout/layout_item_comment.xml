<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="20dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/column_user_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        fresco:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/column_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/column_user_avatar"
        android:layout_toStartOf="@+id/btn_comment_delete"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        />
    <ImageView
        android:id="@+id/btn_comment_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:padding="6dp"
        android:src="@mipmap/comment_delete"
        android:background="@drawable/touch_state_bg"
        />
    <RelativeLayout
        android:id="@+id/comment_content_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/column_user_avatar"
        android:layout_below="@id/column_user_name"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_title_color"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/src_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/comment_content"
            android:textColor="@color/secondary_title_color"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@color/main_bg_color"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/send_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/column_user_avatar"
        android:layout_below="@id/comment_content_wrap"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:textColor="@color/knowledge_item_desc_color"
        />
    <TextView
        android:id="@+id/btn_reply_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btn_like_comment"
        android:layout_below="@id/comment_content_wrap"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/touch_state_bg"
        android:textColor="@color/knowledge_item_desc_color"
        android:textSize="12sp"
        android:text="@string/reply_comment_text"
        />
    <LinearLayout
        android:id="@+id/btn_like_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/comment_content_wrap"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        >
        <TextView
            android:id="@+id/comment_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textColor="@color/knowledge_item_desc_color"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/comment_like_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="6dp"
            android:src="@mipmap/comment_like"
            />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btn_like_comment"
        android:layout_marginTop="10dp"
        android:background="@color/line"

        />
</RelativeLayout>