<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/recent_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_update_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/main_title_color"/>

        <FrameLayout
            android:id="@+id/recent_update_sub_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/corners_bg_with_border"
                android:layout_marginTop="36dp"
                android:paddingTop="44dp">

                <TextView
                    android:id="@+id/recent_update_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_title_color"/>

                <View
                    android:id="@+id/ru_division_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/division_color"
                    android:layout_below="@id/recent_update_sub_title" />

                <ListView
                    android:id="@+id/recent_update_sub_list"
                    android:layout_below="@id/ru_division_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layerType="software"
                    android:divider="@drawable/list_dotted_line"
                    android:dividerHeight="29dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="16dp"
                    android:nestedScrollingEnabled="false"/>
            </RelativeLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/recent_update_avatar"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                fresco:roundedCornerRadius="36dp"
                fresco:roundingBorderWidth="1dp"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/recent_update_sub_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/secondary_title_color"
                android:layout_marginTop="50dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"/>
            <Button
                android:id="@+id/recent_update_sub_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/recent_update_btn_txt"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:layout_marginTop="74dp"
                android:layout_marginEnd="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/recent_update_btn_selector"
                android:drawableStart="@mipmap/class_playall"
                android:drawablePadding="6dp"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
