<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left|center">
        <TextView
            android:id="@+id/flow_info_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/secondary_title_color"/>
        <TextView
            android:id="@+id/flow_info_head_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/main_title_color"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end|center"
        tools:ignore="UseCompoundDrawables">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/flow_info_head_icon"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/flow_info_head_icon_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/high_title_color"
            android:layout_marginTop="8dp"
            android:gravity="center"/>
    </LinearLayout>
</FrameLayout>
