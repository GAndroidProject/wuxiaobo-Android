<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flow_info_item_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_shadow">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/flow_info_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/demo_top"
        fresco:roundedCornerRadius="8dp"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundingBorderWidth="0.5dp"
        android:transitionName="share_video_preview"/>

    <include
        layout="@layout/flow_info_tag_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/flow_info_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/main_title_color"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/flow_info_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        android:maxLines="2"
        android:ellipsize="end"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/flow_info_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

</LinearLayout>