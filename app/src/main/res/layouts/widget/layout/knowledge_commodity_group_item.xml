<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/knowledge_group_item_wrap"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg_with_border">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        tools:ignore="UselessParent">
        
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/knowledge_group_item_icon"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            fresco:roundedCornerRadius="8dp"
            fresco:roundingBorderWidth="1dp"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/knowledge_group_item_icon"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/knowledge_group_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/main_title_color"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/knowledge_group_item_title_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/secondary_title_color"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="26dp"
                android:visibility="gone"/>

        </FrameLayout>

        <TextView
            android:id="@+id/knowledge_group_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/price_color"
            android:layout_marginTop="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/knowledge_group_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="end"
            android:textColor="@color/knowledge_item_desc_color"
            android:layout_marginEnd="10dp"
            android:layout_alignBottom="@id/knowledge_group_item_price"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/knowledge_group_item_price"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>
</FrameLayout>