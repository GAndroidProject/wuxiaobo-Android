<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg_with_border">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        tools:ignore="UselessParent">
        
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/knowledge_group_item_icon"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            fresco:roundedCornerRadius="8dp"
            fresco:roundingBorderWidth="1dp"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"/>
        
        <TextView
            android:id="@+id/knowledge_group_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/main_title_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/knowledge_group_item_icon"/>

        <TextView
            android:id="@+id/knowledge_group_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/price_color"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/knowledge_group_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/knowledge_item_desc_color"
            android:layout_marginEnd="10dp"
            android:layout_alignBottom="@id/knowledge_group_item_price"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</FrameLayout>