<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left|center">
        <TextView
            android:id="@+id/home_title_time"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/secondary_title_color"
            android:text="9月4日 星期二"/>
        <TextView
            android:id="@+id/home_title_desc"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/main_title_color"
            android:text="今日"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end|center"
        android:layout_marginTop="7dp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:id="@+id/home_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_taday_learning"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/home_title_icon_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我正在学"
            android:textSize="14sp"
            android:textColor="@color/high_title_color"
            android:layout_marginTop="8dp"
            android:gravity="center"/>
    </LinearLayout>
</FrameLayout>
