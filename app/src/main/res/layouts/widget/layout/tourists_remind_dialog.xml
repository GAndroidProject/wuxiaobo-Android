<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="275dp">

    <ImageView
        android:id="@+id/btn_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/dialog_close"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:src="@mipmap/payment_success"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:text="@string/tourists_tip"
            android:textStyle="bold"
            android:textColor="@color/main_title_color"/>

        <Button
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/login_main_title"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_exchange_success_bg"/>

    </LinearLayout>

</RelativeLayout>