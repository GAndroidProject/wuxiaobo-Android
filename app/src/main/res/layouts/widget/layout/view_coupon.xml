<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_round_circle">
    
    <RelativeLayout
        android:id="@+id/parent_coupon_money_wrap"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:gravity="center"
        android:background="@drawable/coupon_valid_bg"
        >

        <FrameLayout
            android:id="@+id/coupon_money_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/tv_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.xiaoe.shop.wxb.widget.autotextview.AutofitTextView
                    android:id="@+id/coupon_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_toEndOf="@+id/tv_symbol"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    autofit:minTextSize="10sp"
                    autofit:sizeToFit="true"
                    tools:text="100" />
            </RelativeLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/coupon_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_money_wrap"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/no_threshold_coupon"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/coupon_content_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/parent_coupon_money_wrap"
        android:layout_toStartOf="@+id/use_state_warp"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_title_color"
            android:maxLines="2"
            android:textStyle="bold"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/coupon_valid_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/secondary_title_color"
            />
        <TextView
            android:id="@+id/coupon_valid_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/secondary_title_color"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/use_state_warp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        >
        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="24dp"
            android:src="@mipmap/download_tocheck"
            />
        <TextView
            android:id="@+id/use_coupon"
            android:layout_width="46dp"
            android:layout_height="18dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/use_coupon_border"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/recent_update_btn_pressed"
            android:text="@string/use_coupon"
            />
    </RelativeLayout>
</RelativeLayout>