<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_dialog_bg"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    android:paddingStart="22dp"
    android:paddingEnd="22dp"
    >
    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="38dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/download_remindpage_delete"
        />
    <TextView
        android:id="@+id/radius_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/delete_icon"
        android:textSize="14sp"
        android:textColor="@color/main_title_color"
        android:text="@string/delete_all_download_hint"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/radius_dialog_title"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/radius_dialog_btn_cancel"
            android:layout_width="88dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/main_title_color"
            android:background="@drawable/delete_dialog_btn"
            android:layout_gravity="center"
            android:text="@string/cancel_title"
            />
        <TextView
            android:id="@+id/radius_dialog_btn_confirm"
            android:layout_width="88dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/main_title_color"
            android:background="@drawable/delete_dialog_btn"
            android:layout_gravity="center"
            android:text="@string/confirm_title"
            android:layout_marginStart="20dp"
            />
    </LinearLayout>

</RelativeLayout>