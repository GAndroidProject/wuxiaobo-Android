<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_top_line">

    <Button
        android:id="@+id/buy_vip"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:minHeight="0dp"
        android:layout_weight="1"
        android:background="@drawable/vip_btn_bg"
        android:text="超级会员免费"
        android:textColor="@color/price_color"
        android:textSize="12sp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        style="?android:attr/buttonBarButtonStyle"
        android:drawableStart="@mipmap/profile_diamond"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:includeFontPadding="false"/>

    <Button
        android:id="@+id/buy_course"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:minHeight="0dp"
        android:layout_weight="1"
        android:background="@drawable/recent_update_btn_pressed"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        style="?android:attr/buttonBarButtonStyle"/>

</LinearLayout>