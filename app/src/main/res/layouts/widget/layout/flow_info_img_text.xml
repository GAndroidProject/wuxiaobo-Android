<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flow_info_img_text_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corners_bg_with_border"
        tools:ignore="UselessParent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/flow_info_img_text_bg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="1dp"
            fresco:roundedCornerRadius="8dp"
            fresco:roundingBorderWidth="1dp"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="false"
            android:transitionName="@string/share_img" />

        <TextView
            android:id="@+id/flow_info_img_text_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/main_title_color"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:transitionName="@string/share_txt"/>

        <TextView
            android:id="@+id/flow_info_img_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/main_title_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/flow_info_img_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/main_title_color"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:maxLines="1"
            android:ellipsize="end"/>


        <TextView
            android:id="@+id/flow_info_img_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/price_color"
            android:paddingBottom="24dp"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

</FrameLayout>
