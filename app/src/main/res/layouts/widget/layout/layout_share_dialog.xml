<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/share_dialog"
    >
    <TextView
        android:id="@+id/share_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/main_title_color"
        android:textSize="16sp"
        android:text="@string/share_model"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/line"
        android:layout_below="@id/share_model"
        />
    <View
        android:id="@+id/center_horizontal"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/line"
        />
    <LinearLayout
        android:id="@+id/btn_share_wechat_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="30dp"
        android:layout_toStartOf="@id/center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@mipmap/share_wechat"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@color/recent_list_color"
            android:text="@string/share_wechat_friend"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_share_friend_encircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@mipmap/share_pyq"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@color/recent_list_color"
            android:text="@string/share_friend_encircle"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/btn_cancel_share"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/btn_share_wechat_friend"
        android:layout_marginTop="32dp"
        android:background="@color/audio_page_bg_color"
        android:gravity="center"
        android:text="@string/cancel_title"
        android:textColor="@color/recent_list_color"
        android:textSize="16sp"
        />
</RelativeLayout>