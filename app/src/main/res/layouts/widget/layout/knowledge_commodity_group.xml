<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/knowledge_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_title_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>
        <TextView
            android:id="@+id/knowledge_group_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/price_color"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/knowledge_group_title"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/knowledge_group_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/knowledge_group_title"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</FrameLayout>