<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/knowledge_new_list_item_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg_with_border">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/knowledge_new_list_item_icon"
        android:layout_width="132dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        fresco:roundedCornerRadius="@dimen/corner_border_radius_size"
        fresco:roundingBorderWidth="0.5dp"
        fresco:roundBottomRight="false"
        fresco:roundTopRight="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/knowledge_new_list_item_icon"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/knowledge_new_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/main_title_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/knowledge_new_list_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/knowledge_item_desc_color"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/knowledge_new_list_item_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/knowledge_item_desc_color"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/knowledge_new_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/price_color"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>