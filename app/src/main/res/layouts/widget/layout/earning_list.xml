<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/earning_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textColor="@color/main_title_color"
        android:layout_marginTop="28dp"
        android:background="@drawable/layout_bottom_line"
        android:paddingBottom="20dp"/>

    <ListView
        android:id="@+id/earning_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:divider="@drawable/list_dotted_line"
        android:dividerHeight="24dp"
        android:layerType="software"
        android:nestedScrollingEnabled="false"
        android:clickable="false"/>

    <TextView
        android:id="@+id/earning_empty_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/earning_empty_tip"
        android:textSize="12sp"
        android:textColor="@color/secondary_title_color"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:visibility="gone"/>

</LinearLayout>