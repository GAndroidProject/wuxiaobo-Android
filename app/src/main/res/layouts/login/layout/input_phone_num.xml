<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/login_input_num_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--<EditText-->
            <!--android:id="@+id/login_input_num_head"-->
            <!--android:labelFor="@id/login_input_num_head"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/login_main_phone_head"-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="@color/main_title_color"-->
            <!--android:clickable="false"-->
            <!--android:cursorVisible="false"-->
            <!--android:focusable="false"-->
            <!--android:focusableInTouchMode="false"-->
            <!--android:inputType="none"-->
            <!--tools:ignore="TextFields"-->
            <!--android:paddingTop="16dp"-->
            <!--android:paddingBottom="16dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_main_phone_head"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            android:background="@drawable/bottom_border"
            />

        <EditText
            android:id="@+id/login_input_num_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="@string/login_main_phone_content_hint"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bottom_border"/>

    </LinearLayout>

    <TextView
        android:id="@+id/login_error_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_pwd_error"
        android:textSize="14sp"
        android:textColor="@color/login_error"
        android:layout_marginStart="38dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/login_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_btn_bg_selector_blue"
        android:text="@string/login_main_phone_submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="32dp" />

</LinearLayout>