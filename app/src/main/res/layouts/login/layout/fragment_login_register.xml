<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_register_title"
        android:textSize="32sp"
        android:textColor="@color/main_title_color"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_register_desc"
            android:textSize="14sp"
            android:textColor="@color/secondary_title_color"/>

        <TextView
            android:id="@+id/login_register_provision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_register_desc_content"
            android:textSize="14sp"
            android:textColor="@color/edit_cursor"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <include
        layout="@layout/input_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/login_pwd_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_pwd_error"
        android:textSize="14sp"
        android:textColor="@color/login_error"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/login_register_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_disabled_bg"
        android:text="@string/login_main_phone_submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.6"/>

</LinearLayout>