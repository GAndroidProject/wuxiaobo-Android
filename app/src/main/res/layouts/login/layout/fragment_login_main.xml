<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_main_title"
        android:textSize="32sp"
        android:textColor="@color/main_title_color"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"/>

    <include
        layout="@layout/input_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/login_main_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_main_phone_pwd"
        android:textSize="16sp"
        android:textColor="@color/recent_list_color"
        android:layout_gravity="end"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="28dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/login_main_we_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_main_phone_we_chat"
            android:textSize="16sp"
            android:textColor="@color/recent_list_color"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:drawableStart="@mipmap/confirmorder_wechat"
            android:drawablePadding="8dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="@color/recent_list_color"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/login_main_tourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_main_phone_tourist"
            android:textSize="16sp"
            android:textColor="@color/recent_list_color"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:drawableStart="@mipmap/profile_default"
            android:drawablePadding="8dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp"/>

    </LinearLayout>

</LinearLayout>