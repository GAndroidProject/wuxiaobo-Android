<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_set_pwd_title"
        android:textSize="32sp"
        android:textColor="@color/main_title_color"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_pwd_limit"
        android:textSize="14sp"
        android:textColor="@color/secondary_title_color"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"/>

    <!--<EditText
        android:id="@+id/login_set_pwd_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/login_pwd_pass_word"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        android:drawableEnd="@mipmap/icon_show"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp">

        <EditText
            android:id="@+id/login_set_pwd_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_pwd_pass_word"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/bottom_border"/>

        <ImageView
            android:id="@+id/ivShowPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_hide" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_set_pwd_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_set_pwd_complete"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/common_btn_bg_selector_blue"/>

</LinearLayout>