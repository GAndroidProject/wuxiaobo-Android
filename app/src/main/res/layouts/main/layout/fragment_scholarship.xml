<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout

        android:id="@+id/scholarship_fresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xiaoe.shop.wxb.widget.CustomScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:orientation="vertical"
                    android:background="@drawable/scholarship_bg">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/scholarship_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scholarship_title"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/scholarship_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scholarship_rule"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_gravity="end|bottom"
                            android:paddingEnd="20dp"
                            android:paddingStart="20dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/scholarship_money_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scholarship_day_title"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="46dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scholarship_money_head"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_gravity="bottom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scholarship_money_content"
                            android:textSize="32sp"
                            android:textColor="@color/white"
                            android:layout_gravity="bottom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scholarship_title"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="6dp"
                            android:layout_gravity="bottom"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp">

                        <ImageView
                            android:id="@+id/scholarship_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scholarship_process"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/scholarship_step_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scholarship_complete"
                            android:layout_marginStart="42dp"
                            android:layout_marginTop="50dp"
                            android:layout_gravity="start"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/scholarship_step_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scholarship_complete"
                            android:layout_marginTop="22dp"
                            android:layout_gravity="center_horizontal"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/scholarship_step_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scholarship_complete"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="42dp"
                            android:layout_gravity="end"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_marginTop="-56dp"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        android:background="@drawable/divide_btn_border_bg"/>

                    <Button
                        android:id="@+id/scholarship_divide"
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:drawableTop="@mipmap/divide_top"
                        android:text="@string/scholarship_money_submit"
                        android:gravity="center"
                        android:paddingTop="22dp"
                        android:background="@drawable/divide_btn_content_bg" />

                </FrameLayout>

                <TextView
                    android:id="@+id/scholarship_range_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scholarship_range_title"
                    android:textSize="18sp"
                    android:textColor="@color/main_title_color"
                    android:drawableStart="@mipmap/range_title"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="28dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="26dp">

                    <TextView
                        android:id="@+id/scholarship_real_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scholarship_range_real"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/btn_column_menu"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/scholarship_all_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scholarship_range_total"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/btn_column_menu"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_bottom_line">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scholarship_range"
                            android:textSize="14sp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scholarship_user"
                            android:textSize="14sp"
                            android:layout_marginStart="86dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scholarship_title"
                            android:textSize="14sp"
                            android:layout_gravity="end"/>

                    </FrameLayout>

                    <ListView
                        android:id="@+id/real_range_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@drawable/list_dotted_line"
                        android:dividerHeight="28dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="10dp"
                        android:layerType="software"
                        android:scrollbars="none"/>

                    <ListView
                        android:id="@+id/all_range_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@drawable/list_dotted_line"
                        android:dividerHeight="28dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="10dp"
                        android:layerType="software"
                        android:scrollbars="none"/>

                </FrameLayout>

                <com.xiaoe.shop.wxb.widget.ListBottomLoadMoreView
                    android:id="@+id/scholarship_bottom_load_more"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/logo_logo_xiaoetong"
                    android:contentDescription="@string/xet_logo"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"/>

            </LinearLayout>

        </com.xiaoe.shop.wxb.widget.CustomScrollView>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.xiaoe.shop.wxb.widget.StatusPagerView
        android:id="@+id/scholarship_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
