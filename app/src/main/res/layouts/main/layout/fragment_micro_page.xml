<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/micro_page_app_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:stateListAnimator="@null"
            app:layout_behavior="@string/micro_page_behavior">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/micro_page_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <!-- 自定义的布局信息 -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/micro_page_head_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/micro_page_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    app:layout_collapseMode="pin"
                    android:background="@color/high_title_color"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/micro_page_toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/micro_fragment_title"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/micro_page_toolbar_search_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/class_search"
                        android:layout_gravity="end"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/micro_page_content_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

    <xiaoe.com.shop.widget.StatusPagerView
        android:id="@+id/micro_page_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
