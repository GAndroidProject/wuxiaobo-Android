<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:paddingTop="28dp"
    android:paddingBottom="28dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/scholarship_range_title_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scholarship_range_title"
        android:textSize="18sp"
        android:textColor="@color/main_title_color"
        android:drawableStart="@mipmap/range_title"
        android:drawablePadding="4dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/scholarship_real_range_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scholarship_range_real"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_column_menu"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>

    <TextView
        android:id="@+id/scholarship_all_range_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scholarship_range_total"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_column_menu"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginStart="16dp"/>

</LinearLayout>