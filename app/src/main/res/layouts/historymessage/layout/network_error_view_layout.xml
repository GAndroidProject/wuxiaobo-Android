<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewNetworkError"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivNetworkErrorBg"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/network_none" />

    <TextView
        android:id="@+id/tvNetworkErrorTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivNetworkErrorBg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/network_none_text"
        android:textColor="@color/main_title_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNetworkErrorTip"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/click_refresh"
        android:textColor="#4b96ff"
        android:textSize="16sp" />
</RelativeLayout>