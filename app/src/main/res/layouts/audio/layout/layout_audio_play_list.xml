<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_floating_bg"
    android:id="@+id/layout_audio_play_list"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/menu_background"
        >
        <TextView
            android:id="@+id/products_title"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="@string/buy_goods_name_text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/main_title_color"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/line"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/play_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/btn_cancel_play_list"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:background="@color/audio_page_bg_color"
            android:textSize="16sp"
            android:textColor="@color/main_title_color"
            android:text="@string/cancel_title"
            />
    </LinearLayout>


</RelativeLayout>