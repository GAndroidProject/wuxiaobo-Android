<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.xiaoe.shop.wxb.widget.CustomScrollView
        android:id="@+id/audio_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/audio_poster_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingBottom="6dp"
                android:background="@mipmap/audio_top_bg"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/audio_bg"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    fresco:actualImageScaleType="fitCenter"
                    android:transitionName="share_img_audio_bg"
                    android:layout_centerHorizontal="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription"
                    android:src="@mipmap/cd_shadow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-26dp"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/audio_ring"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_centerHorizontal="true"
                    fresco:roundAsCircle="true"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:placeholderImage="@mipmap/detail_disk"
                    android:transitionName="@string/share_img"
                    fresco:roundedCornerRadius="95dp"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundBottomLeft="true"
                    fresco:roundBottomRight="true" />
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="75dp"
                    android:visibility="gone"
                    android:background="@drawable/white_circle_shape"/>
                <TextView
                    android:id="@+id/audio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/audio_ring"
                    android:layout_marginTop="28dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/main_title_color"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:transitionName="share_audio_title"
                    android:paddingStart="46dp"
                    android:paddingEnd="46dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/controller_wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/play_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/circle_shape"
                    android:drawablePadding="5dp"
                    android:textColor="@color/secondary_title_color"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/try_audio_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/secondary_title_color"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/audio_count_down"
                        android:layout_width="64dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/btn_speed_bg"
                        android:textSize="14sp"
                        android:textColor="@color/btn_speed_border_color"
                        android:text="@string/audio_count_down"
                        android:drawableEnd="@mipmap/icon_speed_play"
                        android:drawablePadding="-10dp"
                        android:paddingEnd="10dp" />
                    <TextView
                        android:id="@+id/audio_speed_play"
                        android:layout_marginStart="12dp"
                        android:layout_width="64dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/btn_speed_bg"
                        android:textSize="14sp"
                        android:textColor="@color/btn_speed_border_color"
                        android:text="@string/speed_play_text"
                        android:drawableEnd="@mipmap/icon_speed_play"
                        android:drawablePadding="-10dp"
                        android:paddingEnd="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/btn_play_list"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@mipmap/audio_detail" />
                    <ImageView
                        android:id="@+id/btn_audio_comment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/audio_comment"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/btn_audio_download"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/audio_download"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/btn_collect"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/audio_collect"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/btn_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/audio_share"
                        android:layout_weight="1" />
                </LinearLayout>
                <com.xiaoe.shop.wxb.business.audio.ui.AudioPlayControllerView
                    android:id="@+id/audio_play_controller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"/>
                <WebView
                    android:id="@+id/audio_detail_content"
                    android:layout_marginTop="39dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.xiaoe.shop.wxb.widget.CustomScrollView>
    <com.xiaoe.shop.wxb.widget.CommonBuyView
        android:id="@+id/common_buy_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>
    <com.xiaoe.shop.wxb.business.audio.ui.AudioPlayListLayout
        android:id="@+id/audio_play_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.xiaoe.shop.wxb.widget.StatusPagerView
        android:id="@+id/state_pager_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/status_bar_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/audio_title_bar"
        android:layout_width="match_parent"
        android:layout_below="@+id/status_bar_blank"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/audio_page_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:scaleType="center"
            android:src="@mipmap/audiodetail_back"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:lines="1"
            android:visibility="gone"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:textColor="@color/main_title_color"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>
</RelativeLayout>