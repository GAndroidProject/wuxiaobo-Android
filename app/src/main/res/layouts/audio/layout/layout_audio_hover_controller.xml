<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/hover_audio_disk"
            android:layout_width="52dp"
            android:layout_height="52dp"
            fresco:roundAsCircle="true"
            android:layout_centerInParent="true"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@mipmap/detail_disk"
            />
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:visibility="gone"
            android:background="@drawable/white_circle_shape"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/hover_audio_last"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@mipmap/audio_show_last"
        />
    <ImageView
        android:id="@+id/hover_audio_play"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@mipmap/audio_play"
        />
    <ImageView
        android:id="@+id/hover_audio_next"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@mipmap/audio_show_next"
        />
    <ImageView
        android:id="@+id/hover_audio_more"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@mipmap/audiodetail_more"
        />

</LinearLayout>