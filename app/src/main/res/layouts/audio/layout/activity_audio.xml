<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/audio_page_bg_color">

    <LinearLayout
        android:id="@+id/controller_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/audio_speed_play"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/btn_speed_bg"
            android:textSize="14sp"
            android:textColor="@color/btn_speed_border_color"
            android:text="@string/speed_play_text"
            />
        <xiaoe.com.shop.business.audio.ui.AudioPlayControllerView
            android:id="@+id/audio_play_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="38dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@mipmap/audio_detail"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/audio_comment"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/audio_download"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/audio_collect"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/audio_share"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/audio_page_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/audio_white_back"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/audio_poster_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@id/controller_wrap"
        android:layout_below="@id/audio_page_close_btn"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/audio_bg"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            fresco:actualImageScaleType="fitCenter"
            android:transitionName="@string/share_img"
            android:layout_centerHorizontal="true"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/audio_ring"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
            fresco:actualImageScaleType="fitCenter"
            android:transitionName="@string/share_img"
            />
        <TextView
            android:id="@+id/audio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/audio_ring"
            android:layout_marginTop="48dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/main_title_color"
            android:maxLines="2"
            android:transitionName="share_audio_title"
            />
        <TextView
            android:id="@+id/play_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@id/audio_title"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/circle_shape"
            android:drawablePadding="5dp"
            android:textColor="@color/secondary_title_color"
            android:textSize="14sp"
            />
    </RelativeLayout>
</RelativeLayout>