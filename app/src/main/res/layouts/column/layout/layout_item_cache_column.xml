<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_content_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/border"
    >
    
    <RelativeLayout
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@mipmap/download_checking"
            />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/column_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/btn_select"
        android:layout_toStartOf="@+id/btn_expand_down"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/main_title_color"
        android:textSize="16sp"
        />

    <LinearLayout
        android:id="@+id/btn_expand_down"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_title_color"
            android:textSize="14sp"
            android:text="@string/expand_down"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:src="@mipmap/expand"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_play_all"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"

            android:src="@mipmap/class_play"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/secondary_title_color"
            android:textSize="14sp"
            android:text="@string/play_all"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_child_content_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/column_title"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/child_class_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            />
        <RelativeLayout
            android:id="@+id/btn_expand_top"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/expand_top_icon"
                android:textSize="14sp"
                android:textColor="@color/secondary_title_color"
                android:text="@string/expand_top"
                />
            <ImageView
                android:id="@+id/expand_top_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/expand_top"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>