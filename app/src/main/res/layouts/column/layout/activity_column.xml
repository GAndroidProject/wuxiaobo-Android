<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    >
    <com.xiaoe.shop.wxb.widget.CustomScrollView
        android:id="@+id/column_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/common_buy_layout"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/column_image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                fresco:actualImageScaleType="fitXY"
                />
            <RelativeLayout
                android:id="@+id/column_menu_warp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/column_image"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >
                <TextView
                    android:id="@+id/column_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_title_color"
                    android:layout_toStartOf="@+id/btn_collect"
                    android:textSize="26sp"
                    android:maxLines="2"
                    />
                <ImageView
                    android:id="@+id/btn_collect"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toStartOf="@+id/btn_share"
                    android:layout_marginStart="20dp"
                    />
                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@mipmap/audio_share"
                    android:layout_alignParentEnd="true"
                    />
                <TextView
                    android:id="@+id/buy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/column_title"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/circle_shape"
                    android:drawablePadding="5dp"
                    android:textColor="@color/secondary_title_color"
                    android:textSize="14sp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/member_expire_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/column_title"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:textColor="@color/secondary_title_color"
                    android:textSize="14sp"
                    android:visibility="gone"
                    />
                <View
                    android:id="@+id/division_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/buy_num"
                    android:layout_marginTop="20dp"
                    android:background="@color/line"
                    />
                <LinearLayout
                    android:id="@+id/btn_content_detail"
                    android:layout_width="98dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/division_line"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_column_menu"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/btn_content_detail_tag"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/detail_cls"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/column_detail"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_content_directory"
                    android:layout_width="98dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_below="@id/division_line"
                    android:layout_toEndOf="@id/btn_content_detail"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_column_menu"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/btn_content_director_tag"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/detail_classtree_invalid"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/column_directory"
                        />
                </LinearLayout>
            </RelativeLayout>

            <com.xiaoe.shop.wxb.widget.ScrollViewPager
                android:id="@+id/column_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/column_menu_warp"
                />
            <com.xiaoe.shop.wxb.widget.ListBottomLoadMoreView
                android:id="@+id/btn_bottom_load_more"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingBottom="10dp"
                android:layout_below="@id/column_view_pager"
                android:visibility="gone"
                />
            <FrameLayout
                android:id="@+id/bottom_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_bottom_load_more"
                android:background="@color/audio_page_bg_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_image_text_page_bottom"
                    android:textSize="12sp"
                    android:textColor="@color/course_page_bottom_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"/>

            </FrameLayout>
        </RelativeLayout>

    </com.xiaoe.shop.wxb.widget.CustomScrollView>

    <RelativeLayout
        android:id="@+id/column_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:src="@mipmap/detail_white_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textColor="@color/main_title_color"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/btn_tool_bar_collect"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/video_collect"
            android:layout_toStartOf="@+id/btn_tool_bar_share"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            />
        <ImageView
            android:id="@+id/btn_tool_bar_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/audio_share"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <com.xiaoe.shop.wxb.business.audio.ui.MiniAudioPlayControllerLayout
        android:id="@+id/mini_audio_play_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/common_buy_layout"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        />

    <com.xiaoe.shop.wxb.widget.CommonBuyView
        android:id="@+id/common_buy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <com.xiaoe.shop.wxb.widget.StatusPagerView
        android:id="@+id/state_pager_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>