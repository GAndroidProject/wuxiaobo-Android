<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <xiaoe.com.shop.widget.CustomScrollView
        android:id="@+id/column_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/common_buy_layout"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/column_image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                />
            <RelativeLayout
                android:id="@+id/column_menu_warp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/column_image"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >
                <TextView
                    android:id="@+id/column_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_title_color"
                    android:layout_toStartOf="@+id/btn_collect"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    />
                <ImageView
                    android:id="@+id/btn_collect"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/video_collect"
                    android:layout_toStartOf="@+id/btn_share"
                    android:layout_marginStart="20dp"
                    />
                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@mipmap/audio_share"
                    android:layout_alignParentEnd="true"
                    />
                <TextView
                    android:id="@+id/buy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/column_title"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/circle_shape"
                    android:drawablePadding="5dp"
                    android:textColor="@color/secondary_title_color"
                    android:textSize="14sp"
                    />
                <View
                    android:id="@+id/division_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/buy_num"
                    android:layout_marginTop="20dp"
                    android:background="@color/line"
                    />
                <LinearLayout
                    android:id="@+id/btn_content_detail"
                    android:layout_width="98dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/division_line"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_column_menu"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/btn_content_detail_tag"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/detail_cls"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/column_detail"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_content_directory"
                    android:layout_width="98dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_below="@id/division_line"
                    android:layout_toEndOf="@id/btn_content_detail"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_column_menu"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/btn_content_director_tag"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/detail_classtree_invalid"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/column_directory"
                        />
                </LinearLayout>
            </RelativeLayout>

            <xiaoe.com.shop.widget.ScrollViewPager
                android:id="@+id/column_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@id/column_menu_warp"
                />
        </RelativeLayout>

    </xiaoe.com.shop.widget.CustomScrollView>
    
    <RelativeLayout
        android:id="@+id/column_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:src="@mipmap/detail_white_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toStartOf="@id/btn_tool_bar_collect"
            android:layout_toEndOf="@id/btn_back"
            android:textColor="@color/main_title_color"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/btn_tool_bar_collect"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/video_collect"
            android:layout_toStartOf="@+id/btn_tool_bar_share"
            android:layout_marginStart="20dp"
            />
        <ImageView
            android:id="@+id/btn_tool_bar_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/audio_share"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <xiaoe.com.shop.widget.CommonBuyView
        android:id="@+id/common_buy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>