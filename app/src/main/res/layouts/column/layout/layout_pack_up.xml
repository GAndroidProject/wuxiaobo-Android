<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expand_top_btn"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:layout_below="@id/tree_child_recycler_view"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/border_expandable_down"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/expand_top"
        android:text="@string/expand_top"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/expand_top"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:src="@mipmap/expand_top" />

</RelativeLayout>