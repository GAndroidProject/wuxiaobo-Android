<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    >
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:src="@mipmap/download_back"
            />
        <TextView
            android:id="@+id/cache_column_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/btn_back"
            android:layout_toStartOf="@+id/btn_batch_delete"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/main_title_color"
            />
        <TextView
            android:id="@+id/btn_batch_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@color/secondary_title_color"
            android:textSize="14sp"
            android:text="@string/batch_delete_text"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_below="@id/tool_bar"
        android:layout_above="@id/line_3"
        />

    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_above="@+id/bottom_select_download_wrap"
        />
    <RelativeLayout
        android:id="@+id/bottom_select_download_wrap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >
        <RelativeLayout
            android:id="@+id/btn_all_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/all_select_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/download_tocheck"
                />
            <TextView
                android:id="@+id/all_select_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/all_select_image"
                android:layout_marginStart="8dp"
                android:textColor="@color/price_color"
                android:textSize="16sp"
                android:text="@string/all_select_text"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/select_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_all_select"
            android:layout_marginStart="12dp"
            android:textColor="@color/secondary_title_color"
            />
        <TextView
            android:id="@+id/btn_all_delete"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/delete_cache_red"
            android:gravity="center"
            android:textColor="@color/delete_red"
            android:textSize="16sp"
            android:text="@string/delete_text"
            />
    </RelativeLayout>
</RelativeLayout>