<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timer_tips_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="66dp"
        android:paddingLeft="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@mipmap/bg_timer_tips">
        <TextView
            android:id="@+id/timer_tips_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FEC300"
            android:textSize="12sp"
            android:text="10s"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="@string/after_stop_play_video"/>
        <TextView
            android:id="@+id/timer_tips_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#FEC300"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:text="@string/close_count_down"/>
    </LinearLayout>
</RelativeLayout>
