<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_layout"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SurfaceView
        android:id="@+id/id_video_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_preview_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"/>
    <RelativeLayout
        android:id="@+id/play_controller_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/id_come_back_control"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/black_down_gradual_change">

            <ImageView
                android:id="@+id/id_btn_come_back"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/detail_white_back" />
            <ImageView
                android:id="@+id/btn_speed"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_countdown"
                android:padding="6dp"
                android:src="@mipmap/icon_video_speed"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/btn_countdown"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_download"
                android:padding="6dp"
                android:src="@mipmap/icon_video_time"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_download"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="6dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/video_download"
                tools:ignore="ContentDescription" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/id_play_progress_widget"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/black_upward_gradual_change"
            >
            <ImageView
                android:id="@+id/id_video_progress_play"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@mipmap/btn_video_pause" />
            <ImageView
                android:id="@+id/id_video_play_next"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/id_video_progress_play"
                android:src="@mipmap/icon_video_next" />

            <TextView
                android:id="@+id/id_current_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/id_video_play_next"
                android:text="00:00"
                android:textColor="@color/audio_page_bg_color"
                android:textSize="12sp" />


            <SeekBar
                android:id="@+id/id_play_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/id_total_play_time"
                android:layout_toEndOf="@+id/id_current_play_time"
                android:maxHeight="2dp"
                style="@style/video_play_seek_bar_style" />

            <TextView
                android:id="@+id/id_total_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/id_full_screen_play"
                android:text="00:00"
                android:textColor="@color/audio_page_bg_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/id_full_screen_play"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:src="@mipmap/icon_video_full" />

        </RelativeLayout>
    </RelativeLayout>


    <ImageView
        android:id="@+id/id_btn_playVideo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_video_play_big" />
    <RelativeLayout
        android:id="@+id/count_down_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#a0000000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_centerHorizontal="true"
            android:text="@string/video_count_down_title"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:drawableLeft="@mipmap/icon_video_time"
            android:drawablePadding="5dp"/>
        <LinearLayout
            android:id="@+id/video_countdown_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">
            <TextView
                android:id="@+id/video_countdown_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/audio_count_down_item_1"/>
            <TextView
                android:id="@+id/video_countdown_text_2"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/video_count_down_item_2"/>
            <TextView
                android:id="@+id/video_countdown_text_3"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/video_count_down_item_3"/>
            <TextView
                android:id="@+id/video_countdown_text_4"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/video_count_down_item_4"/>
        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/timer_tips_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/speed_play_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>