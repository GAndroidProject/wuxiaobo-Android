<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/speed_play_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_centerHorizontal="true"
        android:text="@string/video_speed_play"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:drawableLeft="@mipmap/icon_video_speed"
        android:drawablePadding="5dp"/>

    <LinearLayout
        android:id="@+id/ll_speed_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_speed_play_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/video_speed_play_0"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_speed_play_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:text="@string/video_speed_play_1"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_speed_play_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:text="@string/video_speed_play_2"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_speed_play"
        android:layout_alignStart="@+id/ll_speed_play"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/btn_speed_play_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/video_speed_play_3"/>
        <TextView
            android:id="@+id/btn_speed_play_4"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/video_speed_play_4"/>
    </LinearLayout>
</RelativeLayout>