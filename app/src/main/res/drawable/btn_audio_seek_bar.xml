<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="14dp" android:height="14dp">
        <shape>
            <corners android:radius="@dimen/audio_seek_bar_radius_size" />
            <padding
                android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
            <gradient android:angle="90"
                android:startColor="#EE4B4D55"
                android:endColor="#EE4B4D55"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/audio_seek_bar_radius_size" />
            <padding
                android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
            <gradient android:angle="90"
                android:startColor="#FE4B4D55"
                android:endColor="#FE4B4D55"/>
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#4B4D55" />
            <corners android:radius="@dimen/audio_seek_bar_radius_size" />
        </shape>
    </item>
</layer-list>