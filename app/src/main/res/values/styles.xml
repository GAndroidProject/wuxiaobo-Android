<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/lucency</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!--radioButton的共有布局-->
    <style name="BottomTabRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/lucency</item>
        <item name="android:textColor">@drawable/bottom_bar_button_content_color</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--音频播放控制器样式-->
    <style name="audio_play_seek_bar_style" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/audio_play_seek_bar</item>
        <item name="android:thumb">@drawable/audio_seek_bar_thum_selector</item>
    </style>
    <!--视频频播放控制器样式-->
    <style name="video_play_seek_bar_style" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/audio_play_seek_bar</item>
        <item name="android:thumb">@drawable/audio_seek_bar_thum_selector</item>
    </style>

</resources>
