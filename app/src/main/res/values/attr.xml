<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 下拉放大控件 id，放大 dp -->
    <declare-styleable name="PushScrollView">
        <attr name="scrollId" format="integer"/>
        <attr name="maxZoom" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="AudioDetailsSwitchLayout">
        <attr name="header_view" format="reference"/>
        <attr name="target_view" format="reference"/>
        <attr name="hover_view" format="reference"/>
        <attr name="header_init_offset" format="dimension"/>
        <attr name="target_end_offset" format="dimension"/>
        <attr name="target_init_offset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="ringColor" format="color"/>
    </declare-styleable>

    <!---->
    <declare-styleable name="SlidingButtonView">
        <attr name="sliding_delete" format="boolean"/>
    </declare-styleable>
    <!-- 自定义验证码输入框-->
    <declare-styleable name="CodeVerifyView">

        <!--输入框的数量-->
        <attr name="cv_number" format="integer" />
        <!--输入类型-->
        <attr name="cv_inputType">
            <enum name="number" value="0" />
            <enum name="numberPassword" value="1" />
            <enum name="text" value="2" />
            <enum name="textPassword" value="3" />
        </attr>
        <!--输入框的宽度-->
        <attr name="cv_width" format="dimension|reference" />
        <!-- 输入框的高度 -->
        <attr name="cv_height" format="dimension|reference" />
        <!--输入框文字颜色-->
        <attr name="cv_text_color" format="color|reference" />
        <!--输入框文字大小-->
        <attr name="cv_text_size" format="dimension|reference" />
        <!--输入框背景-->
        <attr name="cv_bg" format="reference" />
        <!--光标样式-->
        <attr name="cv_cursor" format="reference" />
    </declare-styleable>
    <!-- 动态变更字体大小的TextView -->
    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer" />
        <attr name="rv_rippleDuration" format="integer" />
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0" />
            <enum name="doubleRipple" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />
    </declare-styleable>

</resources>